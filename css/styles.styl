@import 'nib'

d_blue = #465F97
r_red = #D62F4F
i_gray = #ccc
ajam_blue = #2677B9

body
	font-size 16px
#wrapper
	font-size 62.5%
	font-family Helvetica, Arial, sans-serif
	
#dropzone
	width 300px
	height 100px
	border 2px dashed #ccc
	margin 0 auto
	text-align center
	line-height 5.5em
	font-size 1.8em
	color #666
	
#video
	display none
#video-container
	text-align center
	margin 0 auto

#progress-bar
	margin 10px 0
	padding 3px
	border 1px solid #000
	font-size 14px
	clear both
	opacity 0
	-moz-transition opacity 1s linear
	-o-transition opacity 1s linear
	-webkit-transition opacity 1s linear

#progress-bar.loading
	opacity 1.0

#progress-bar .percent
	background-color #99ccff
	height auto
	width 0
