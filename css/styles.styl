@import 'nib'

d_blue = #465F97
r_red = #D62F4F
i_gray = #ccc
ajam_blue = #2677B9

.ajmint-mhk-wrapper
	font-size 62.5%
	
#drop-zone
	width 200px
	height 100px
	background-color #fc0

#progress-bar
	margin 10px 0
	padding 3px
	border 1px solid #000
	font-size 14px
	clear both
	opacity 0
	-moz-transition opacity 1s linear
	-o-transition opacity 1s linear
	-webkit-transition opacity 1s linear

#progress-bar.loading
	opacity 1.0

#progress-bar .percent
	background-color #99ccff
	height auto
	width 0
